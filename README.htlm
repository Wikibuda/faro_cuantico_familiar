    <script>
        function mostrarSeccion(seccionId) {
            // Ocultar todas las secciones
            document.querySelectorAll('.content-section').forEach(seccion => {
                seccion.classList.remove('active');
            });
            
            // Remover activo de todos los tabs
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Mostrar secci√≥n seleccionada
            document.getElementById(seccionId).classList.add('active');
            
            // Activar tab seleccionado
            event.target.classList.add('active');
            
            // Scroll suave al inicio de la secci√≥n
            document.getElementById(seccionId).scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
            });
        }

        // Detectar hash de URL al cargar
        document.addEventListener('DOMContentLoaded', function() {
            const hash = window.location.hash.substring(1);
            if (hash && document.getElementById(hash)) {
                mostrarSeccion(hash);
            }
        });
    </script>
